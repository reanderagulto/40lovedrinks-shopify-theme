{
    "name": "CTA Section",
    "settings": [
        {
            "type": "text", 
            "id": "cta_1_title",
            "label": "CTA 1 Title"
        }, 
        {
            "type": "richtext", 
            "id": "cta_1_description",
            "label": "CTA 1 Description"
        },
        {
            "type": "text", 
            "id": "cta_1_button_label", 
            "label": "CTA 1 Button Label"
        },
        {
            "type": "text", 
            "id": "cta_1_button_link", 
            "label": "CTA 1 Button Link"
        },
        {
            "type": "text", 
            "id": "cta_2_title",
            "label": "CTA 2 Title"
        }, 
        {
            "type": "richtext", 
            "id": "cta_2_description",
            "label": "CTA 2 Description"
        },
        {
            "type": "text", 
            "id": "cta_2_button_label", 
            "label": "CTA 2 Button Label"
        },
        {
            "type": "text", 
            "id": "cta_2_button_link", 
            "label": "CTA 2 Button Link"
        }
    ]
}
{% endschema %}