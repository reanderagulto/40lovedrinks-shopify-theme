<section class="coming-soon">
    <div class="container">
        <div class="coming-soon__inner-wrapper">
            <div class="coming-soon__banner"> 
                <div class="coming-soon__logo">
                    <img 
                        src="{{ settings.logo | image_url }}" 
                        alt="{{ shop.name }}"
                        width="132"
                        height="61"
                    >
                </div>
                <div class="coming-soon__image">
                    <img 
                        src="{{ section.settings.banner_image | image_url }} " 
                        width="100%"
                        height="600"
                        loading="lazy"
                    />
                </div>
                <div class="coming-soon__banner--title">
                    <div class="site-title__xl">
                        {{ section.settings.banner_title }}
                    </div>
                </div>
            </div>
            <div class="text-center coming-soon__banner-desc">
                <h2 class="text-center site-title__xl">{{ section.settings.banner_subtitle }}</h2>
                <p>{{ section.settings.banner_desc }}</p>
            </div>
            {% comment %} <div class="coming-soon__banner--form">
                {% form 'customer', id: 'newsletter-form', class: 'form' %} 
                    <input type="hidden" name="contact[tags]" value="newsletter">
                    <input type="hidden" name="contact[accepts_marketing]" value="true">
                    <div class="form__control bordered-black">
                        <input type="email" name="contact[email]" placeholder="Email address" required>
                    </div>
                    {% if form.posted_successfully? %} 
                        <p class="newsletter__success">Thank you for subscribing!</p> 
                    {% elsif form.errors %}
                        <p class="newsletter__error">{{ form.errors | default_errors }}</p> 
                    {% endif %} 
                    <div class="flex align-center form__submit">
                        <button type="submit" class="btn full">Get 10% Off at Launch</button>
                    </div>
                {% endform %}
                <p class="coming-soon__banner--disclaimer text-center">
                    Formulated with premium Japanese ingredients.
                </p>
            </div> {% endcomment %}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Banner", 
    "settings": [
        {
            "type": "image_picker",
            "id": "banner_image",
            "label": "Banner Image"
        },
        {
            "type": "richtext",
            "id": "banner_title",
            "label": "Banner Title"
        }, 
        {
            "type": "text",
            "id": "banner_subtitle",
            "label": "Subtitle"
        },
        {
            "type": "richtext",
            "id": "banner_desc",
            "label": "Banner Description"
        }
    ]
}
{% endschema %}