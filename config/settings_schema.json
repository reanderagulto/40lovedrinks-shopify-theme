[
    {
        "name": "theme_info",
        "theme_name": "Skeleton",
        "theme_version": "0.1.0",
        "theme_author": "Shopify",
        "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
        "theme_support_url": "https://support.shopify.com/"
    },
    {
        "name": "t:general.typography",
        "settings": [
            {
                "type": "header",
                "content": "t:general.fonts"
            },
            {
                "type": "font_picker",
                "id": "type_primary_font",
                "default": "work_sans_n4",
                "label": "t:general.primary"
            },
        ]
    },
    {
        "name": "t:general.layout",
        "settings": [
            {
                "type": "select",
                "id": "max_page_width",
                "label": "t:labels.page_width",
                "options": [
                    {
                        "value": "90rem",
                        "label": "t:options.page_width.narrow"
                    },
                    {
                        "value": "110rem",
                        "label": "t:options.page_width.wide"
                    }
                ],
                "default": "90rem"
            },
            {
                "type": "range",
                "id": "min_page_margin",
                "min": 10,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "t:labels.page_margin",
                "default": 20
            }
        ]
    },
    {
    "name": "t:general.colors",
    "settings": [
        {
            "type": "color",
            "id": "primary_color",
            "default": "#1B1B1B",
            "label": "Primary Color"
        },
        {
            "type": "color",
            "id": "secondary_color",
            "default": "#FFFFFF",
            "label": "Secondary Color"
        },
        {
            "type": "range",
            "id": "input_corner_radius",
            "min": 0,
            "max": 10,
            "step": 1,
            "unit": "px",
            "label": "t:labels.input_corner_radius",
            "default": 4
        }
    ]
    },
    {
        "name": "Header",
        "settings": [
            {
                "type": "image_picker",
                "id": "logo",
                "label": "Logo image"
            },
            {
                "type": "range",
                "id": "logo_width",
                "min": 50,
                "max": 300,
                "step": 10,
                "unit": "px",
                "label": "Logo width",
                "default": 150
            },
            {
                "type": "link_list",
                "id": "menu",
                "label": "Navigation menu"
            }
        ]
    },
    {
        "name": "Footer",
        "settings": [
            {
                "type": "link_list",
                "id": "footer_menu",
                "label": "t:labels.menu"
            },
            {
                "type": "image_picker",
                "id": "footer_logo",
                "label": "Footer Logo"
            },
            {
                "type": "checkbox",
                "id": "show_payment_icons",
                "label": "t:labels.show_payment_icons",
                "default": true
            }
        ]
    },
    {
        "name": "Footer - Newsletter",
        "settings": [
            {
                "type": "text",
                "id": "header_text",
                "label": "Header Text"
            },
            {
                "type": "richtext",
                "id": "header_desc",
                "label": "Header Description"
            },
        ]
    }
]
